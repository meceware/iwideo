{
    "env": {
        "browser": true,
        "es6": true
    },
    "globals": {
        "YT": true,
        "Vimeo": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2,
            { "SwitchCase": 1 }
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "prefer-const": [
            "error",
            {
                "destructuring": "any",
                "ignoreReadBeforeAssign": false
            }
        ],
        "no-else-return": [ "error", { "allowElseIf": false } ],
        "no-useless-concat": "error",
        "prefer-numeric-literals": "error",
        "curly": "error",
        "no-invalid-this": "error",
        "no-redeclare": "error",
        "no-debugger": "warn"
    }
}
